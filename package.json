{
  "name": "nerves-devtools-vscode",
  "version": "0.2.1",
  "icon": "resources/nerves-logo-color.png",
  "displayName": "Nerves Devtools",
  "description": "Utilities for working with Nerves projects and devices in VS Code",
  "repository": "github:bjyoungblood/nerves_devtools_vscode",
  "license": "Apache-2.0",
  "publisher": "bjyoungblood",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "ssh2": "^1.16.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^22.17.0",
    "@types/ssh2": "^1.15.5",
    "@types/vscode": "^1.88.0",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9",
    "@vscode/vsce": "^3.2.1",
    "eslint": "^9.14.0",
    "globals": "^15.12.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.14.0"
  },
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:elixir"
  ],
  "contributes": {
    "icons": {
      "nerves-devtools": {
        "description": "Nerves Logo",
        "default": {
          "fontPath": "resources/icons.woff",
          "fontCharacter": "A"
        }
      },
      "nerves-run": {
        "description": "Run on Device",
        "default": {
          "fontPath": "resources/icons.woff",
          "fontCharacter": "B"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "nerves-devtools",
          "title": "Nerves Devtools",
          "icon": "resources/nerves-logo-white.png"
        }
      ]
    },
    "views": {
      "nerves-devtools": [
        {
          "id": "nerves-devtools.devices",
          "icon": "resources/nerves-logo-white.png",
          "name": "Devices"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "nerves-devtools.devices-welcome",
        "contents": "No devices found.\n[Add device](command:nerves-devtools.add-device)",
        "when": "view == nerves-devtools.devices"
      }
    ],
    "menus": {
      "editor/title/run": [
        {
          "command": "nerves-devtools.run-on-device",
          "when": "editorLangId == elixir",
          "group": "1_run@1"
        }
      ],
      "view/title": [
        {
          "command": "nerves-devtools.add-device",
          "when": "view == nerves-devtools.devices",
          "group": "navigation"
        },
        {
          "command": "nerves-devtools.refresh-devices",
          "when": "view == nerves-devtools.devices",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "nerves-devtools.connect",
          "when": "view == nerves-devtools.devices && viewItem == device-closed",
          "group": "inline@1"
        },
        {
          "command": "nerves-devtools.disconnect",
          "when": "view == nerves-devtools.devices && viewItem =~ /^device-/ && viewItem != device-closed",
          "group": "inline@1"
        },
        {
          "command": "nerves-devtools.edit-device",
          "when": "view == nerves-devtools.devices && viewItem =~ /^device-/",
          "group": "inline@2"
        },
        {
          "command": "nerves-devtools.delete-device",
          "when": "view == nerves-devtools.devices && viewItem =~ /^device-/",
          "group": "inline@3"
        },
        {
          "command": "nerves-devtools.copy",
          "when": "view == nerves-devtools.devices && viewItem == metadata",
          "group": "inline@1"
        }
      ],
      "commandPalette": [
        {
          "command": "nerves-devtools.copy",
          "when": "false"
        }
      ]
    },
    "commands": [
      {
        "command": "nerves-devtools.run-on-device",
        "title": "Run on device",
        "category": "Nerves Devtools",
        "icon": "$(nerves-run)",
        "enablement": "editorLangId == elixir",
        "shortTitle": "Run on device"
      },
      {
        "command": "nerves-devtools.select-device",
        "title": "Select Device",
        "category": "Nerves Devtools"
      },
      {
        "command": "nerves-devtools.add-device",
        "title": "Add Device",
        "icon": "$(add)",
        "category": "Nerves Devtools"
      },
      {
        "command": "nerves-devtools.edit-device",
        "title": "Edit Device",
        "icon": "$(edit)",
        "category": "Nerves Devtools"
      },
      {
        "command": "nerves-devtools.delete-device",
        "title": "Delete Device",
        "icon": "$(trash)",
        "category": "Nerves Devtools"
      },
      {
        "command": "nerves-devtools.refresh-devices",
        "title": "Refresh",
        "icon": "$(refresh)",
        "category": "Nerves Devtools"
      },
      {
        "command": "nerves-devtools.connect",
        "title": "Connect",
        "icon": "$(vm-connect)",
        "category": "Nerves Devtools"
      },
      {
        "command": "nerves-devtools.disconnect",
        "title": "Disconnect",
        "icon": "$(debug-disconnect)",
        "category": "Nerves Devtools"
      },
      {
        "command": "nerves-devtools.copy",
        "title": "Copy",
        "icon": "$(copy)"
      }
    ],
    "configuration": {
      "title": "Nerves Devtools",
      "properties": {
        "nerves-devtools.privateKeyPath": {
          "type": "string",
          "default": "~/.ssh/id_rsa",
          "description": "Path to the private key used for SSH connections to Nerves devices."
        }
      }
    }
  }
}
